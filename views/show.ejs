<% include partials/header %> <!--We can also do partials/header-->
    <div class="ui main text container">
        <div class="ui huge header"><%= blog.title %></div>
        <div class="ui top attached segment">
            <div class="item">
                <br><img class="ui centered rounded image" src="<%= blog.image %>">
                <div class="content">
                    <br><span><%= blog.created.toDateString() %></span> <!--change date to human readable date-->            
                </div>
                <div class="description">
                    <p><%- blog.body %></p> <!-- CHANGING  "< %=" to "< %-" IS VERY POWERFUL. IT WILL READ THE CODE INSIDE OF IT -->             
                </div>
                <form class="showform" action="/blogs/<%= blog._id %>/edit" method="GET">
                    <button class="ui orange basic button">Edit</button>
                </form>
                <form class="showform" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <button class="ui red basic button">Delete</button>
                </form>
            </div>
        </div>
    </div>
<% include partials/footer %>